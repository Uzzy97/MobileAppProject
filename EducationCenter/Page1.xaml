<Page
    x:Class="EducationCenter.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EducationCenter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:Name="myPivot" Background="White">
            <PivotItem Header="Introduction To Planets" Background="LightCoral">
                <StackPanel>

                    <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="DarkBlue" TextWrapping="Wrap"
                               Text="
                               
                               
                               Hello Kids, Welcome To Our Online Teaching About Our Wonderful Planets That We Are Surrounded By...Lets Have A Look, Shall We?" Height="200" Width="600"/>
                    <StackPanel Background="White" Height="300">
                        <Image x:Name="image1" Source="/images/Children-Education.jpg" Height="300" Width="500" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Background="AntiqueWhite" Height="100">
                        <Button x:Name="button1" Content="Review" HorizontalAlignment="Center" Background="Coral"
                            VerticalAlignment="Center" Width="200" Height="100" Foreground="DarkBlue" Tapped="button_Tapped"/>
                    </StackPanel>

                </StackPanel>
            </PivotItem>
            
            <PivotItem Header="Earth" Background="LightBlue">
                <StackPanel VerticalAlignment="Top" Background="DarkBlue">
                    
                    <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" FontStyle="Oblique" FontSize="25" TextAlignment="Left" Foreground="Wheat" TextWrapping="Wrap"
                               Text="1. The Earth's roatation is gradualy slowing.
                                   6. Fromed 4.54 billion years ago."
                               VerticalAlignment="Top"/>
                    <StackPanel VerticalAlignment="Top" Background="LightBlue">
                        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="DarkGray" TextWrapping="Wrap"
                               Text="2. There are 7.6 billion people on the earth.
                                    7. The Earth has a powerful magnetic field."
                               VerticalAlignment="Top"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Background="DarkBlue">
                        <TextBlock x:Name="textBlock4" HorizontalAlignment="Left" FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="Wheat" TextWrapping="Wrap"
                               Text="3. Once believed to be the centre of the universe.
                         8. The Earth is the densest planet in the Solar System."
                               VerticalAlignment="Top"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Background="LightBlue">
                        <TextBlock x:Name="textBlock5" HorizontalAlignment="Left"
                                   FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="DarkGray" TextWrapping="Wrap"
                               Text="4. Earth is the only planet not named after God.
                            9. There is only one natural satellite of the planet Earth."
                               VerticalAlignment="Top"/>
                    </StackPanel>
                    <StackPanel VerticalAlignment="Top" Background="DarkBlue">
                        <TextBlock x:Name="textBlock6" HorizontalAlignment="Left" FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="Wheat" TextWrapping="Wrap"
                               Text="5. The Earth is the third planet from the sun.
                               10. Earth is the largest of the terrestrial planets."
                               VerticalAlignment="Top"/>
                    </StackPanel>
                    
                    <StackPanel>
                        <Image x:Name="image2" Source="/images/Earth_Western_Hemisphere_transparent_background.png" Margin="3,0,0,66"/>
                    </StackPanel>
                    
                </StackPanel>

            </PivotItem>

            <PivotItem Header="Jupiter" Background="Brown">
                <StackPanel>
                    <StackPanel Background="Beige" Height="500">
                        <Image x:Name="image3" Source="/images/planet-trans-jupiter.png" Height="500" Width="500" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel>

                        <TextBlock x:Name="textBlock1456" HorizontalAlignment="Center" FontStyle="Oblique" FontSize="25" TextAlignment="Center" Foreground="Beige" TextWrapping="Wrap"
                               Text="Jupiter is the fifth planet out from the Sun. It's two and a half times more massive than all the other planets in the solar system combined.
                                   It is made primarily of gases and is therefore known as a *Gas Giant*" Height="200" Width="600"/>
                    </StackPanel>


                </StackPanel>
            </PivotItem>
